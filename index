  <script src="https://cdn.jsdelivr.net/npm/mind-ar@1.2.5/dist/mindar-image-aframe.prod.js"></script>

  <style>
    body { margin: 0; font-family: 'Poppins', sans-serif; background: #000; }

    #logo { position: absolute; top: 16px; left: 16px; width: 100px; z-index: 100; }

    /* Main video play/pause button */
    .button-panel { position: absolute; bottom: 100px; left: 50%; transform: translateX(-50%); display: none; z-index: 100; }

    .plan-button { padding: 12px 22px; font-size: 16px; font-weight: 600; border: none; border-radius: 10px; background: rgba(0,0,0,0.55); color: #fff; cursor: pointer; }
    .plan-button:hover { background: rgba(0,0,0,0.75); }

    /* New Buttons */
    #tryJewelsBtn { position: absolute; bottom: 10px; left: 10px; display: none; z-index: 110; }
    #savingsBtn { position: absolute; bottom: 10px; right: 10px; display: none; z-index: 110; }
    #locationBtn { position: absolute; top: 10px; right: 10px; display: none; z-index: 110; }

    #toast { position: absolute; top: 20px; right: 20px; background: rgba(255,255,255,0.18); color: #fff; padding: 8px 12px; border-radius: 8px; display: none; z-index: 200; }
  .a-enter-vr-button { display: none !important; }
