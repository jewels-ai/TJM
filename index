<body>

  <img src="logo1.png" id="logo">

  <div class="button-panel" id="planButtons"><button class="plan-button" id="toggleButton">‚ñ∂Ô∏è Play Video</button></div>

  <!-- New Buttons -->
  <button class="plan-button" id="tryJewelsBtn" onclick="window.location.href='https://jewels-ai.github.io/Ai_Jewellery_Demo_Ai/'">üåü Try Our Jewellery</button>
  <button class="plan-button" id="savingsBtn" onclick="window.open('https://jewels-ai.github.io/Ai_savings-plan_Ai/')">üí∞ Savings Plan</button>
  <button class="plan-button" id="locationBtn" onclick="window.open('https://maps.app.goo.gl/U3cmv1V6CV9e95QB8')">üìç Locations</button>

  <div id="toast">Action Disabled</div>

  <a-scene mindar-image="imageTargetSrc: ./targets.mind" renderer="colorManagement: true; physicallyCorrectLights: true; antialias: true" vr-mode-ui="enabled: false" device-orientation-permission-ui="enabled: false">

    <a-assets>
      <video id="plan1Video" src="plan1.mp4" playsinline preload="auto" loop crossorigin="anonymous"></video>
    </a-assets>

    <a-camera look-controls="enabled:false"></a-camera>

    <a-entity id="target1" mindar-image-target="targetIndex: 0">
      <a-plane id="videoDisplay" position="0 0 0" width="1" height="0.59" material="src: #plan1Video; shader: flat; side: double"></a-plane>
    </a-entity>
  </a-scene>

  <script>
    const sceneEl = document.querySelector('a-scene');
    const videoEl = document.querySelector('#plan1Video');
    const videoDisplay = document.querySelector('#videoDisplay');
    const target = document.querySelector('#target1');

    const buttonsContainer = document.querySelector('#planButtons');
    const toggleButton = document.querySelector('#toggleButton');
    const toast = document.querySelector('#toast');

    const tryJewelsBtn = document.querySelector('#tryJewelsBtn');
    const savingsBtn = document.querySelector('#savingsBtn');
    const locationBtn = document.querySelector('#locationBtn');

    let isPlaying = false;

    function showToast(msg) {
      toast.textContent = msg;
      toast.style.display = 'block';
      setTimeout(() => toast.style.display = 'none', 1200);
    }

    target.addEventListener('targetFound', () => {
      buttonsContainer.style.display = 'block';
      tryJewelsBtn.style.display = 'block';
      savingsBtn.style.display = 'block';
      locationBtn.style.display = 'block';
    });

    target.addEventListener('targetLost', () => {
      buttonsContainer.style.display = 'none';
      tryJewelsBtn.style.display = 'none';
      savingsBtn.style.display = 'none';
      locationBtn.style.display = 'none';
      videoEl.pause();
      toggleButton.textContent = "‚ñ∂Ô∏è Play Video";
      isPlaying = false;
    });

    toggleButton.addEventListener('click', () => {
      if (!isPlaying) {
        videoDisplay.setAttribute('material', 'src', '#plan1Video');
        videoEl.play();
        toggleButton.textContent = "‚è∏ Pause Video";
        isPlaying = true;
      } else {
        videoEl.pause();
        toggleButton.textContent = "‚ñ∂Ô∏è Play Video";
        isPlaying = false;
      }
    });

    document.addEventListener("contextmenu", e => { e.preventDefault(); showToast('Action Disabled'); });
    document.addEventListener("keydown", e => {
      if (e.key === "F12" || (e.ctrlKey && e.shiftKey && (e.key === "I" || e.key === "J" || e.key === "C")) || (e.ctrlKey && e.key === "u")) {
        e.preventDefault(); showToast('Action Disabled');
      }
    });
  </script>
</body>
